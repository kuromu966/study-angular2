{
    "compilerOptions": {
	"target": "es5",
	"noImplicitAny": true,
	"experimentalDecorators": true,
	"emitDecoratorMetadata": true,
	"moduleResolution": "node",
	"outDir": "build"
    },
    "filesGlob": [
	"./**/*.ts",
	"!./**/*.d.ts",
	"!./node_modules/**/*",
	"./node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "files": [
	"./src/index.ts",
	"./node_modules/typescript/lib/lib.es6.d.ts"
    ]
}
